---
import '../styles/global.css';
import NavBar from '@/components/NavBar.astro';
import Footer from '@/components/Footer.astro';
import BaseHead from '@/components/BaseHead.astro';

const {
  title = 'DigitalDent | Plataforma integral para odontólogos y laboratorios',
  description = 'Gestiona órdenes, escaneos 3D, agenda y facturación en una sola plataforma.',
  showNavLogin = true
} = Astro.props;
---

<html lang="es" class="bg-slate-950">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100">
    <NavBar showLogin={showNavLogin} />
    <main>
      <slot />
    </main>
    <Footer />
    <slot name="scripts" />
  </body>
</html>
