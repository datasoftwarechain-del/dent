---
import AppLayout from '@/layouts/AppLayout.astro';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}
---

<AppLayout title="Tienda" description="Catálogo de insumos y checkout" user={user}>
  <div class="rounded-3xl border border-dashed border-white/10 bg-slate-950/60 p-10 text-center text-slate-300">
    <p class="text-lg font-semibold text-white">Tienda integrada en construcción</p>
    <p class="mt-3 text-sm">Pronto podrás gestionar productos, stock y checkout Stripe directamente desde aquí.</p>
  </div>
</AppLayout>
