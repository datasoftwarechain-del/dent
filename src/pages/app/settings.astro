---
import AppLayout from '@/layouts/AppLayout.astro';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}
---

<AppLayout title="Configuración" description="Preferencias de la cuenta y la clínica" user={user}>
  <div class="rounded-3xl border border-dashed border-white/10 bg-slate-950/60 p-10 text-center text-slate-300">
    <p class="text-lg font-semibold text-white">Centro de configuración próximamente</p>
    <p class="mt-3 text-sm">Editar perfil, roles, alertas personalizadas e integraciones externas en una sola vista.</p>
  </div>
</AppLayout>
