---
const {
  title = 'Detalle del turno'
} = Astro.props as {
  title?: string;
};
---

<section class="rounded-3xl border border-white/10 bg-slate-950/70 p-6 shadow-lg shadow-primary/5">
  <div class="flex items-center justify-between">
    <h2 class="text-lg font-semibold text-white">{title}</h2>
    <div class="flex items-center gap-2">
      <button
        type="button"
        data-action="edit-appointment"
        class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-slate-200 transition hover:bg-white/10 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent"
      >
        Editar
      </button>
      <button
        type="button"
        data-action="save-appointment"
        class="rounded-full border border-accent/50 bg-accent px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-white transition hover:brightness-95 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent"
        disabled
      >
        Guardar
      </button>
    </div>
  </div>

  <p data-role="details-feedback" class="mt-3 hidden rounded-2xl bg-white/5 px-4 py-2 text-xs text-slate-300"></p>

  <form data-role="details-form" class="mt-6 space-y-4">
    <div>
      <label class="text-xs font-semibold uppercase tracking-wide text-slate-400" for="detail-patient">
        Paciente
      </label>
      <input
        id="detail-patient"
        name="patient"
        type="text"
        class="mt-1 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-white focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/40"
        data-field="patient"
        disabled
      />
    </div>

    <div class="grid gap-4 sm:grid-cols-2">
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400" for="detail-start">
          Inicio
        </label>
        <input
          id="detail-start"
          name="startsAt"
          type="datetime-local"
          class="mt-1 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-white focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/40"
          data-field="startsAt"
          disabled
        />
      </div>
      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-400" for="detail-end">
          Fin
        </label>
        <input
          id="detail-end"
          name="endsAt"
          type="datetime-local"
          class="mt-1 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-white focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/40"
          data-field="endsAt"
          disabled
        />
      </div>
    </div>

    <div>
      <label class="text-xs font-semibold uppercase tracking-wide text-slate-400" for="detail-treatment">
        Tratamiento
      </label>
      <input
        id="detail-treatment"
        name="treatment"
        type="text"
        maxlength="200"
        class="mt-1 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-white focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/40"
        data-field="treatment"
        disabled
      />
    </div>

    <div>
      <label class="text-xs font-semibold uppercase tracking-wide text-slate-400" for="detail-notes">
        Notas
      </label>
      <textarea
        id="detail-notes"
        name="notes"
        rows="4"
        class="mt-1 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-white focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/40"
        data-field="notes"
        disabled
      ></textarea>
    </div>

    <div>
      <label class="text-xs font-semibold uppercase tracking-wide text-slate-400" for="detail-status">
        Estado
      </label>
      <select
        id="detail-status"
        name="status"
        class="mt-1 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-white focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/40"
        data-field="status"
        disabled
      >
        <option value="SCHEDULED">Programado</option>
        <option value="COMPLETED">Completado</option>
        <option value="CANCELLED">Cancelado</option>
        <option value="NO_SHOW">No asisti√≥</option>
      </select>
    </div>
  </form>
</section>
