---
const links = [
  { href: '#funcionalidad', label: 'Funcionalidad' },
  { href: '#workflow', label: 'Workflow' },
  { href: '#clientes', label: 'Clientes' },
  { href: '#contacto', label: 'Contacto' }
];
const { showLogin = true } = Astro.props;
---

<nav class="sticky top-0 z-40 border-b border-white/5 bg-slate-950/70 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href="/" class="flex items-center gap-2 text-lg font-semibold text-white">
      <span class="inline-flex size-9 items-center justify-center rounded-full bg-primary text-white">DD</span>
      <span>DigitalDent</span>
    </a>
    <div class="hidden items-center gap-8 text-sm md:flex">
      {links.map((link) => (
        <a href={link.href} class="font-medium text-slate-200 hover:text-accent">{link.label}</a>
      ))}
    </div>
    <div class="flex items-center gap-3">
      {showLogin && (
        <a
          href="/login"
          class="rounded-full border border-white/10 px-4 py-2 text-sm font-medium text-white hover:border-accent hover:text-accent"
        >
          Iniciar sesi√≥n
        </a>
      )}
      <a
        href="/register"
        class="rounded-full bg-primary px-5 py-2 text-sm font-semibold text-white shadow-lg shadow-primary/30 hover:bg-primary/90"
      >
        Empezar demo
      </a>
    </div>
  </div>
</nav>
