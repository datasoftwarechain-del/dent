---
const { title, description } = Astro.props as { title: string; description?: string };
---

<header class="flex items-center justify-between border-b border-white/5 bg-slate-950/60 px-6 py-4 backdrop-blur">
  <div>
    <h1 class="text-2xl font-semibold text-white">{title}</h1>
    {description && <p class="text-sm text-slate-400">{description}</p>}
  </div>
  <div class="flex items-center gap-3">
    <a
      href="/app/work-orders/new"
      class="hidden rounded-full border border-white/10 px-4 py-2 text-sm font-medium text-slate-200 transition hover:border-accent hover:text-accent sm:inline-flex"
    >
      Nueva orden
    </a>
    <a
      href="/app/store"
      class="inline-flex items-center justify-center rounded-full bg-primary px-4 py-2 text-sm font-semibold text-white hover:bg-primary/90"
    >
      Comprar insumos
    </a>
  </div>
</header>
