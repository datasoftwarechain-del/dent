---
const { label, value, trend } = Astro.props as { label: string; value: string; trend?: string };
---

<div class="rounded-2xl border border-white/10 bg-slate-950/70 p-5 shadow-lg shadow-primary/5">
  <p class="text-xs font-medium uppercase tracking-wide text-slate-400">{label}</p>
  <p class="mt-3 text-2xl font-semibold text-white">{value}</p>
  {trend && <p class="mt-1 text-xs text-accent">{trend}</p>}
</div>
